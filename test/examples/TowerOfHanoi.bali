            $parameters: [
                $fromPeg: [
                    $description: "The peg from which the disk originates."
                    $type: /bali/elements/Text/v1
                ]
                $toPeg: [
                    $description: "The peg to which the disk should be moved."
                    $type: /bali/elements/Text/v1
